<%- model_class = Client -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%= link_to t('.new', :default => t("helpers.links.clients.new")),
            new_client_path,
            :class => 'btn btn-primary pull-right' %>
<table class="table table-striped sort-table">
  <thead>
    <tr>
      <th><%= sortable model_class.human_attribute_name(:id) %></th>
      <th><%= sortable model_class.human_attribute_name(:name) %></th>
      <th><%= sortable model_class.human_attribute_name(:email) %></th>
      <th><%= sortable model_class.human_attribute_name(:source) %></th>
      <th><%= sortable model_class.human_attribute_name(:rating) %></th>
      <th><%= sortable model_class.human_attribute_name(:website) %></th>
      <th><%= sortable model_class.human_attribute_name(:company) %></th>
      <th><%= sortable model_class.human_attribute_name(:location) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= link_to client.id, client_path(client) %></td>
        <td><%= client.name %></td>
        <td><%= client.email %></td>
        <td><%= client.source %></td>
        <td> <div id="star1" class="raty" data-score="<%=client.rating%>"></div></td>
        <td><%= client.website %></td>
        <td><%= client.company %></td>
        <td><%= client.location %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_client_path(client), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      client_path(client),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


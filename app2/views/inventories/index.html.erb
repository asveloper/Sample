<%- model_class = Inventory -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%= link_to t('.new', :default => t("helpers.links.inventories.new")),
            new_inventory_path,
            :class => 'btn btn-primary pull-right' %>
<table class="table table-striped sort-table">
  <thead>
    <tr>
      <th><%= sortable model_class.human_attribute_name(:id) %></th>
      <th><%= sortable model_class.human_attribute_name(:name) %></th>
      <th><%= sortable model_class.human_attribute_name(:serial) %></th>
      <th>Bearer</th>
      <th><%= sortable model_class.human_attribute_name(:comments) %></th>
      <th><%= sortable model_class.human_attribute_name(:category) %></th>
      <th><%= sortable model_class.human_attribute_name(:quantity) %></th>
      <th><%= sortable model_class.human_attribute_name(:value) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= link_to inventory.id, inventory_path(inventory) %></td>
        <td><%= inventory.name %></td>
        <td><%= inventory.serial %></td>
        <td><%= inventory.employee.name if inventory.employee.present? %></td>
        <td><%= inventory.comments %></td>
        <td><%= inventory.category %></td>
        <td><%= inventory.quantity %></td>
        <td><%= inventory.value %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_inventory_path(inventory), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      inventory_path(inventory),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

